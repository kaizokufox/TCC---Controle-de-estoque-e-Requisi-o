<!DOCTYPE HTML>
<html>
<head>
    <title>HomeEstoque</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Augment Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="~/css/style.css" rel='stylesheet' type='text/css' />
    <!-- Graph CSS -->
    <link href="~/css/font-awesome.css" rel="stylesheet">
    <!-- jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/css/icon-font.min.css" type='text/css' />
    <!-- /js -->
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <!-- //js-->

    <script>
        // FUNÇAO - SOMENTE LETRAS
        function Onlynumbers(e) {
            var tecla = new Number();
            if (window.event) {
                tecla = e.keyCode;
            }
            else if (e.which) {
                tecla = e.which;
            }
            else {
                return true;
            }
            if ((tecla >= "97") && (tecla <= "122")) {
                return false;
            }
        }
    </script>
</head>

<body>


    <div class="page-container">
        <!--/content-inner-->
        <div class="left-content">
            <div class="inner-content">
                <!-- header-starts -->
                <div class="header-section">
                    <div class="profile-widget">
                       
                        <div class="clearfix"></div>
                    </div>
                    <!--//menu-right-->
                    <div class="clearfix"></div>
                </div>
                <!-- //header-ends -->
                <!--outter-wp-->
                <div class="outter-wp">

                    <!--//sub-heard-part-->
                    <div class="graph-visual tables-main">

                        <div id="tabs" class="tabs">
                            <div class="graph">
                                <nav>
                                    <ul>
                                        <li><a href="#section-1" class="icon-shop"><i class="glyphicon glyphicon-tags"></i> <span>Curso</span></a></li>
                                        <li><a href="#section-2" class="icon-cup"><i class="glyphicon glyphicon-th"></i> <span>Turmas</span></a></li>
                                        <li><a href="#section-3" class="icon-food"><i class="glyphicon glyphicon-tasks"></i> <span>Lotes</span></a></li>
                                        <li><a href="#section-4" class="icon-lab"><i class="glyphicon glyphicon-flash"></i> <span>Formulações</span></a></li>
                                        <li><a href="#section-5" class="icon-truck"><i class="glyphicon glyphicon-star"></i> <span>Ingredientes</span></a></li>
                                    </ul>
                                </nav>

                                <div class="content tab">
                                    <section id="section-1">
                                        <form method="post">

                                            @*<div class="mediabox">
                                <i class="fa fa-leaf"></i>
                                <h3>Curso</h3>
                            </div>
                            <p></p>*@

                                            <h4 class="inner-tittle two">Lista de Cursos</h4>
                                            <p></p>

                                            <p class="vermelho">@(ViewBag.Mensagem) </p>


                                            <div class="graph">

                                                <div class="tables">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th id="op2">Nome</th>
                                                                <th id="op2">Duracao</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var C in ViewBag.Curso)
                                                            {
                                                                <tr>
                                                                    <td class="tdList">@(C.NomeCurso)   </td>
                                                                    <td class="tdList">@(C.Duracao)     </td>

                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </form>
                                    </section>


                                    <section id="section-2">
                                        <form method="post">
                                            <h4 class="inner-tittle two">Lista de Turma</h4>
                                            <p></p>
                                            <div class="graph">

                                                <div class="tables">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th id="op3">Nome</th>
                                                                <th id="op1">Alunos</th>
                                                                <th id="op3">Curso</th>
                                                                <th id="op1">Periodo</th>
                                                                <th id="op3">Data Início</th>
                                                                <th id="op3">Data Termino</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var T in ViewBag.Turmas)
                                                            {
                                                                <tr>
                                                                    <td class="tdList">@(T.NomeTurma)    </td>
                                                                    <td class="tdList">@(T.QtdAlunos)    </td>
                                                                    <td class="tdList">@(T.NomeCurso)    </td>
                                                                    <td class="tdList">@(T.Periodo)      </td>
                                                                    <td class="tdList1">@(T.DataInicio)   </td>
                                                                    <td class="tdList1">@(T.DataTermino)  </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                </div>
                                    </form>
                                    </section>

                                    <section id="section-3">
                                        <form method="post">
                                            <h4 class="inner-tittle two">Lista do Lote</h4>
                                            <p></p>
                                            <div class="graph">

                                                <div class="tables">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th id="op1">Codigo</th>
                                                                <th id="op3">Nome</th>
                                                                <th id="op3">Data de Entrada</th>
                                                                <th id="op3">Data de Validade</th>
                                                                <th id="op3">Inseridos / Total Itens</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            @foreach (var L in ViewBag.Lotes)
                                                            {
                                                                <tr>
                                                                    <td class="tdList">@(L.CodigoLote)          </td>
                                                                    <td class="tdList">@(L.NomeLote)            </td>
                                                                    <td class="tdList1">@(L.DataEntrada)        </td>
                                                                    <td class="tdList1">@(L.DataValidade)       </td>
                                                                    <td class="tdList">@(L.inserido)/@(L.Quantidadeitens)     </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                               </div>
                                        </form>
                                    </section>

                                    <section id="section-4">
                                        <form method="post">
                                            <h4 class="inner-tittle two">Lista de Formulações</h4>
                                            <p></p>
                                            <div class="graph">

                                                <div class="tables">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th id="op2">Nome</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var F in ViewBag.Formulacoes)
                                                            {
                                                                <tr>
                                                                    <td class="tdList">@(F.NomeFormulacao)   </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </form>
                                    </section>

                                    <section id="section-5">
                                        <form method="post">
                                            <h4 class="inner-tittle two">Lista de Ingredientes</h4>
                                            <p></p>
                                            <div class="graph">
                                                <div class="tables">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr class="lista">
                                                                <th id="op2">Codigo Lote</th>
                                                                <th id="op2">Nome Lote</th>
                                                                <th id="op2">Ingrediente</th>
                                                                <th id="op3">Quantidade</th>
                                                                <th id="op3">Unidade de Medida</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            @foreach (var I in ViewBag.Ingredientes)
                                                            {
                                                                <tr>
                                                                    <td class="tdList">@(I.FK_CodigoLote)       </td>
                                                                    <td class="tdList">@(I.NomeLote)       </td>
                                                                    <td class="tdList">@(I.NomeIngrediente)       </td>
                                                                    <td class="tdList">@(I.QtdIngrediente)        </td>
                                                                    <td class="tdList">@(I.UnidadeMedida)         </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </form>
                                    </section>
                                </div><!-- /content -->
                            </div>
                        </div>



                    </div>
                </div>

                <script src="~/js/cbpFWTabs.js"></script>
                <script>
                    new CBPFWTabs(document.getElementById('tabs'));
                </script>

            </div> <!--//inner-content--->

        </div><!--//left-content-->
        <!--footer section start-->
        <footer>
            <p>&copy 2016 Augment . All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts.</a></p>
        </footer>
        <!--footer section end-->
        <!--/sidebar-menu-->
        <div class="sidebar-menu">
            <header class="logo">
                <a href="#" class="sidebar-icon"> <span class="fa fa-bars"></span> </a>
                <span id="logo"> <h1>Estoque</h1>  </span>
            </header>

            <div style="border-top:1px solid rgba(69, 74, 84, 0.7)"></div>
            <!--/down-->
            <div class="down">
                @foreach (Int32 Codigo in ViewBag.Imagens)
                {
                    <a href="/Usuario/AlterarImagem"><img class="foto" src="~/Usuario/Ver/@(Codigo)" /></a>
                }
                <span class="name-caret">@Session["NomeUsuario"]</span>
                <p>@(Session["NomeCargo"])</p>
                @*<ul>                    
                    <li><a class="tooltips" href="/Home/Home"><span>Sair E.</span><i class="glyphicon glyphicon-remove"></i></a></li>
                </ul>*@
            </div>
            <!--//down-->
            <div class="menu">
                <ul id="menu">

                    @*<li id="menu-academico"><a href="/Home/Home"><i class="glyphicon glyphicon-home"></i> <span>Home</span> </a></li>*@
                    <li id="menu-academico"><a href="/Curso/ListarCursos"><i class="glyphicon glyphicon-tags"></i> <span>Cursos</span> </a></li>
                    <li id="menu-academico"><a href="/Turma/ListarTurmas"><i class="glyphicon glyphicon-th"></i> <span>Turmas</span> </a></li>
                    <li id="menu-academico"><a href="/Lote/ListarLotes"><i class="glyphicon glyphicon-tasks"></i> <span>Lotes</span> </a></li>
                    <li id="menu-academico"><a href="/Formulacao/ListarFormulacoes"><i class="glyphicon glyphicon-flash"></i> <span>Formulações</span> </a></li>
                    <li id="menu-academico"><a href="/Ingrediente/ListarIngredientes"><i class="glyphicon glyphicon-star"></i> <span>Ingredientes</span> </a></li>
                    <li id="menu-academico"><a href="/Home/Home"><i class="glyphicon glyphicon-remove"></i> <span>Sair do Estoque</span> </a></li>
                </ul>

            </div>
        </div>
        <div class="clearfix"></div>

        <script>
            var toggle = true;

            $(".sidebar-icon").click(function () {
                if (toggle) {
                    $(".page-container").addClass("sidebar-collapsed").removeClass("sidebar-collapsed-back");
                    $("#menu span").css({ "position": "absolute" });
                }
                else {
                    $(".page-container").removeClass("sidebar-collapsed").addClass("sidebar-collapsed-back");
                    setTimeout(function () {
                        $("#menu span").css({ "position": "relative" });
                    }, 400);
                }

                toggle = !toggle;
            });
        </script>
    </div><!--//page-container-->
    <!--js -->
    <script src="~/js/jquery.nicescroll.js"></script>
    <script src="~/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>

</body>
</html>