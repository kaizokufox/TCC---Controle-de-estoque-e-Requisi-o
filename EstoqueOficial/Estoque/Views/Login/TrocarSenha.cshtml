    <!-- //js-->

    <script>
        // FUNÇAO - SOMENTE LETRAS
        function Onlynumbers(e) {
            var tecla = new Number();
            if (window.event) {
                tecla = e.keyCode;
            }
            else if (e.which) {
                tecla = e.which;
            }
            else {
                return true;
            }
            if ((tecla >= "97") && (tecla <= "122")) {
                return false;
            }
        }
    </script>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="error_page">
        
        <div class="error-top">           
            <img class="logo" src="~/img/logo6.png" />
            
            <div class="login">
                <p></p><p></p>
                <h3 class="inner-tittle t-inner">Trocar Senha</h3>

                <form method="post">

                    <input class="inputSenha" type="password" id="novaSenha" name="novaSenha" required="" placeholder="Digite a Nova Senha" />

                    <input class="inputSenha" type="password" id="repitaNovasenha" name="repitaNovasenha" required="" placeholder="Repita a Nova Senha" />

                    <p></p>
                    <input class="botao" type="submit" id="entrar" name="entrar" value="Confirmar" />

                    <p></p>
                    <a href="/Login/index"> <input class="botao" type="button" name="voltar" value="Voltar" /> </a>

                    <p class="vermelho"><b> @(ViewBag.SenhaMinima) </b></p>
                    <p class="verde"><b> @(ViewBag.MensagemSucesso ) </b></p>
                    <p class="vermelho"><b> @(ViewBag.SenhaNaoConfere) </b></p>

                </form>
            </div>
        </div>
    </div>

    <!--//login-->
