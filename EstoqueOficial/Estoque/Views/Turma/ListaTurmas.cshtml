    </header>
    <!-- ENDS HEADER -->
    <!-- FORMULARIO -->
    <div class="mensagemForm">
        <p>@(ViewBag.Mensagem) </p>
    </div>

    <div class="corpo_cadastro">


        <form method="post">

            <h1 class="headline"> LISTA DE TURMAS </h1>

            <div class="form_lista">
                <table class="lista" border="1">
                    <thead class="lista">
                        <tr class="lista">
                            <th class="op2">Nome </th>
                            <th class="op2">Curso </th>
                            <th class="op2">Duracao </th>
                            <th class="op2">Professor(a) </th>
                            <th id="opcoes"> </th>
                            <th id="opcoes"> </th>
                            <th id="opcoes"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var  in ViewBag.Cursos)
                        {
                            <tr>
                                <td>@(C.NomeCurso) <hr /> </td>
                                <td>@(C.Duracao) <hr /> </td>
                                <td>
                                    <a href="/Curso/AlterarCurso/@(C.CodigoCurso)">
                                        <i style="font-size: 16pt" class="glyphicon glyphicon-pencil" title="Alterar usuário"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/Curso/RemoverCurso/@(C.CodigoCurso)">
                                        <i style="font-size: 16pt" class="glyphicon glyphicon-trash" title="Remover usuário"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/Turma/CadastrarTurma/@(C.CodigoCurso)">
                                        <i style="font-size: 16pt" class="glyphicon glyphicon-plus-sign"></i>
                                    </a>
                                </td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </form>

    </div>
    <!-- ENDS FORMULARIO -->
    <footer>

        <!-- wrapper -->
        <div class="wrapper cf">
