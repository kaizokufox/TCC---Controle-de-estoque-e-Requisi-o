    <link rel="stylesheet" media="screen" href="~/Content/superfish.css" />
    <link rel="stylesheet" href="~/Content/nivo-slider.css" media="all" />
    <link rel="stylesheet" href="~/Content/tweet.css" media="all" />
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" media="all" href="~/Content/lessframework.css" />

    <!-- All JavaScript at the bottom, except this Modernizr build.
       Modernizr enables HTML5 elements & feature detects for optimal performance.
       Create your own custom Modernizr build: www.modernizr.com/download/ -->
    <script src="js/modernizr-2.5.3.min.js"></script>
</head>
<body>

    <!-- HEADER -->
    <header>

        <!-- header wrapper -->
        <div class="wrapper cf">
            <div id="logo">
                <a href="~/Views/Home/Home.cshtml"><img src="~/img/logo.png" alt="" /></a>
            </div>
        </div><!-- ENDS header wrapper -->
        <!-- nav -->
        <nav class="cf">
            <div class="wrapper cf">
                <ul id="nav" class="sf-menu">
                    <li><a href="/Home/Home">HOME<i><b></b></i></a></li>
                    <li>
                        <a href="page.html">COMO USAR?<i><b></b></i></a>
                        <ul>
                            <li><a href="page.html">Geral</a></li>
                            <li><a href="page-typography.html">Pessoal</a></li>
                            <li><a href="page-elements.html">Elements</a></li>
                        </ul>
                    </li>
                    <li><a href="/Login/Logout">SAIR<i><b></b></i></a></li>
                </ul>
            </div>
        </nav>
        <!-- ends nav -->

    </header>
    <!-- ENDS HEADER -->
    <!-- FORMULARIO -->
    <div class="mensagemForm">
        <p>@(ViewBag.Mensagem) </p>
    </div>

    <div class="corpo_cadastro">

        <form method="post">

            <h1 class="headline"> CADASTRAR INGREDIENTE </h1>

            <div class="form_cadastro">

                <ul class="formu">
                    <li>
                        <label> Nome :</label>
                        <input class="caixa_texto" type="text" name="nomeIngrediente" size="24" style="margin-right: 350px; margin-bottom: 40px"/>
                    </li>
                </ul>

                <ul class="formu">
                    <li>
                        <label for="duracao"> Quantidade :</label>
                        <input class="caixa_texto" type="text" name="qtdIngrediente" size="14" style="margin-right: 50px;"/>
                    </li>

                    <li>
                        <label for="turma"> Unidade de Medida :</label>
                        <select id="codigoingredientes" name="ingrediente">
                                <option selected> Selecione uma opção </option>
                                <option value="Kg"> Kg </option>
                                <option value="L"> L </option>
                        </select>
                    </li>
                </ul>
            </div>
            <ul class="bt_AC">
                <li>
                    <input class="botaoForm" type="submit" name="enviar" value="Cadastrar" />
                </li>
            </ul>
        </form>

        <ul class="bt_AC">
            <li>
                <a href="/Home/Home"> <input class="botaoForm" type="submit" name="enviar" value="Cancelar" /> </a>
            </li>
        </ul>
    </div>
    <!-- ENDS FORMULARIO -->

    <footer>

        <!-- wrapper -->
        <div class="wrapper cf">
            <div id="footer-bottom">Copyright© 2016 - Developed by Diego Fernandes & Laressa Assis. </div>
        </div><!-- ENDS wrapper -->


    </footer>

    <!-- JavaScript at the bottom for fast page loading -->
    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
